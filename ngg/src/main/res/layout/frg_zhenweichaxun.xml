<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/j15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cxzw" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/mLinearLayout_top"
                    android:layout_marginLeft="@dimen/j10dp"
                    android:layout_marginRight="@dimen/j10dp"
                    android:background="@drawable/bg_b_xczw" />

                <LinearLayout
                    android:id="@+id/mLinearLayout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j10dp"
                    android:layout_marginRight="@dimen/j10dp"
                    android:layout_marginTop="@dimen/j200dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextView_ny"
                        style="@style/text_style_15_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_w_cxzw"
                        android:gravity="center"
                        android:paddingTop="@dimen/j3dp"
                        android:text="农药" />

                    <TextView
                        android:id="@+id/mTextView_fl"
                        style="@style/text_style_15_gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/j3dp"
                        android:text="肥料" />

                    <TextView
                        android:id="@+id/mTextView_zhz"
                        style="@style/text_style_15_gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/j3dp"
                        android:text="种子" />

                    <TextView
                        android:id="@+id/mTextView_weifei"
                        style="@style/text_style_15_gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/j3dp"
                        android:text="微肥" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mLinearLayout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mLinearLayout_top"
                    android:layout_marginLeft="@dimen/j9dp"
                    android:layout_marginRight="@dimen/j6_5dp"
                    android:background="@drawable/bg_cxzw_w"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/mRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j10dp"
                        android:layout_marginRight="@dimen/j10dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/j17dp" />

                    <com.framewidget.view.FixGridLayout
                        android:id="@+id/mFixGridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j10dp"
                        android:layout_marginRight="@dimen/j10dp"
                        android:layout_marginTop="@dimen/j12dp" />

                    <EditText
                        android:id="@+id/mEditText"
                        style="@style/text_style_13_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/j15dp"
                        android:layout_marginLeft="@dimen/j10dp"
                        android:layout_marginRight="@dimen/j10dp"
                        android:layout_marginTop="@dimen/j9dp"
                        android:background="@drawable/bt_lsjl_n"
                        android:gravity="center_vertical"
                        android:hint="例如：苯磺隆"
                        android:paddingLeft="@dimen/j17dp"
                        android:paddingRight="@dimen/j17dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/clk_mTextView_tijiao"
                    style="@style/text_style_15_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j40dp"
                    android:layout_below="@+id/mLinearLayout_content"
                    android:layout_marginLeft="@dimen/j10dp"
                    android:layout_marginRight="@dimen/j10dp"
                    android:layout_marginTop="@dimen/j20dp"
                    android:background="@drawable/bt_blue_n"
                    android:gravity="center"
                    android:text="提交" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j15dp"
                    android:layout_below="@+id/clk_mTextView_tijiao"
                    android:layout_centerHorizontal="true"
                    android:text="*数据来源于中国农业部"
                    android:textColor="@color/E5"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>