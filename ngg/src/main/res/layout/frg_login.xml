<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j5dp"
        android:background="#f2f2f2" />

    <EditText
        android:id="@+id/mEditText_phone"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j45dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:hint="手机号"
        android:paddingLeft="@dimen/j15dp"
        android:paddingRight="@dimen/j15dp"
        android:singleLine="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j45dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j15dp"
        android:paddingRight="@dimen/j15dp">

        <EditText
            android:id="@+id/mEditText_password"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/j45dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:inputType="textWebPassword"
            android:hint="密码"
            android:singleLine="true" />

        <TextView
            android:id="@+id/clk_mTextView_wangji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="@color/Ea"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView_dl"
        style="@style/text_style_15_white"
        android:layout_width="@dimen/j290dp"
        android:layout_height="@dimen/j40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/j20dp"
        android:background="@drawable/bt_blue_n"
        android:gravity="center"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j15dp"
        android:paddingRight="@dimen/j15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/tyD1" />

        <TextView
            style="@style/text_style_13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j15dp"
            android:layout_marginRight="@dimen/j15dp"
            android:text="使用其他方式登录" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/tyD1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clk_mTextView_qq"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/j25dp"
            android:drawablePadding="@dimen/j10dp"
            android:drawableTop="@drawable/bt_qq_n"
            android:gravity="center"
            android:text="QQ登录" />

        <TextView
            android:id="@+id/clk_mTextView_wx"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j25dp"
            android:drawablePadding="@dimen/j10dp"
            android:drawableTop="@drawable/bt_weixin_n"
            android:gravity="center"
            android:text="微信登录" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/clk_mTextView_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/j20dp"
        android:text="免费注册" />
</LinearLayout>

