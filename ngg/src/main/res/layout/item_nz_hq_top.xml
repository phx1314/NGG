<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mdx.framework.widget.MImageView
        android:id="@+id/mImageView_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTextView_1"
            style="@style/text_style_13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/j5dp"
            android:drawableTop="@drawable/bt_nongyao_n"
            android:gravity="center"
            android:text="农药" />

        <TextView
            android:id="@+id/mTextView_2"
            style="@style/text_style_13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/j5dp"
            android:drawableTop="@drawable/bt_zhongzi_n"
            android:gravity="center"
            android:text="种子" />

        <TextView
            android:id="@+id/mTextView_3"
            style="@style/text_style_13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/j5dp"
            android:drawableTop="@drawable/bt_feiliao_n"
            android:gravity="center"
            android:text="肥料" />

        <TextView
            android:id="@+id/mTextView_4"
            style="@style/text_style_13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/j5dp"
            android:drawableTop="@drawable/bt_nongji_n"
            android:gravity="center"
            android:text="农机" />

        <TextView
            android:id="@+id/mTextView_5"
            style="@style/text_style_13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/j5dp"
            android:drawableTop="@drawable/bt_gengduo_n"
            android:gravity="center"
            android:text="更多"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j8dp"
        android:background="#f2f2f2" />

    <TextView
        style="@style/text_style_13_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j30dp"
        android:drawableLeft="@drawable/ic_sousuo"
        android:drawablePadding="@dimen/j10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j15dp"
        android:text="更多"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1"
        android:visibility="gone" />

    <com.framewidget.view.FixGridLayout
        android:id="@+id/mFixGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/j10dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j8dp"
        android:background="#f2f2f2"
        android:visibility="gone" />
</LinearLayout>

