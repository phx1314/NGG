<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j5dp"
        android:paddingRight="@dimen/j5dp"
        android:paddingTop="@dimen/j10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/j5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mImageView_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/mTextView_1"
                style="@style/text_style_15_black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j30dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="白兰" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mImageView_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/mTextView_2"
                style="@style/text_style_15_black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j30dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="白兰" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

