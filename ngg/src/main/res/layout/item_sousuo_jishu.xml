<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="@dimen/j10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTextView_title"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/test" />

            <TextView
                android:id="@+id/mTextView_num"
                style="@style/text_style_13_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j3dp"
                android:drawableLeft="@drawable/ic_liulian"
                android:drawablePadding="@dimen/j2dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="455" />
        </LinearLayout>

        <TextView
            android:id="@+id/mTextView_remark"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/test" />
    </LinearLayout>

    <com.mdx.framework.widget.MImageView
        android:id="@+id/mMImageView"
        android:layout_width="@dimen/j80dp"
        android:layout_height="@dimen/j60dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar" />
</LinearLayout>

