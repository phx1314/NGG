<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/j10dp"
        android:background="@drawable/bg_con_02"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clk_mTextView_cxbj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/j10dp"
            android:text="重新编辑"
            android:textColor="#4A8BFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tyD1" />

        <TextView
            android:id="@+id/clk_mTextView_cx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/j10dp"
            android:text="撤回解答"
            android:textColor="#FF5041"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/clk_mTextView_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/j10dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:layout_marginRight="@dimen/j10dp"
        android:background="@drawable/bg_con_02"
        android:gravity="center"
        android:padding="@dimen/j10dp"
        android:text="取消"
        android:textColor="#4A8BFF"
        android:textSize="15sp" />
</LinearLayout>

