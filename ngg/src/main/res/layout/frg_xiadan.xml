<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/j15dp">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务内容" />

                <TextView
                    android:id="@+id/mTextView_content"
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j10dp"
                    android:text="@string/test" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />

            <TextView
                style="@style/text_style_15_black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j38dp"
                android:background="#f2f2f2"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/j13dp"
                android:paddingRight="@dimen/j15dp"
                android:text="使用第三方平台支付" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />

            <LinearLayout
                android:id="@+id/clk_mLinearLayout_weixin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/j13dp"
                android:paddingRight="@dimen/j15dp">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_weixin"
                    android:drawablePadding="@dimen/j15dp"
                    android:gravity="center_vertical"
                    android:text="微信支付" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/mImageView_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gouxuan" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />

            <LinearLayout
                android:id="@+id/clk_mLinearLayout_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/j13dp"
                android:paddingRight="@dimen/j15dp">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_zhifubao"
                    android:drawablePadding="@dimen/j15dp"
                    android:gravity="center_vertical"
                    android:text="支付宝支付" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/mImageView_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gouxuan"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/clk_mLinearLayout_yl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/j13dp"
                android:paddingRight="@dimen/j15dp"
                android:visibility="gone">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_yinlian"
                    android:drawablePadding="@dimen/j15dp"
                    android:gravity="center_vertical"
                    android:text="银联支付" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/mImageView_yl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gouxuan"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f2f2f2" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j49dp"
        android:background="@drawable/bg_tab"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j20dp">

        <TextView
            android:id="@+id/mTextView_zongji"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="总计：￥100.0" />

        <TextView
            android:id="@+id/clk_mTextView_shaohou"
            style="@style/text_style_17_white"
            android:layout_width="@dimen/j100dp"
            android:layout_height="match_parent"
            android:background="#FFBD3D"
            android:gravity="center"
            android:text="稍后支付" />

        <TextView
            android:id="@+id/clk_mTextView_jiesuan"
            style="@style/text_style_17_white"
            android:layout_width="@dimen/j100dp"
            android:layout_height="match_parent"
            android:background="@color/B"
            android:gravity="center"
            android:text="立即支付" />
    </LinearLayout>
</LinearLayout>

