<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j320dp">
                <com.framewidget.view.DfCirleCurr
                    android:id="@+id/mDfCirleCurr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <com.mdx.framework.widget.MImageView
                    android:id="@+id/mMImageView_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_avatar" />

                <ImageView
                    android:id="@+id/clk_mImageView_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/j10dp"
                    android:src="@drawable/bt_back_n" />

                <ImageView
                    android:id="@+id/clk_mImageView_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/j10dp"
                    android:src="@drawable/bt_share_n" />
            </RelativeLayout>

            <TextView
                android:id="@+id/mTextView_title"
                style="@style/text_style_15_black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/j15dp"
                android:text="被蓝莓" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tyD1" />

            <TextView
                style="@style/text_style_13_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/j10dp"
                android:text="杂草介绍" />

            <WebView
                android:id="@+id/mWebView"
                style="@style/text_style_13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j10dp"
                android:layout_marginRight="@dimen/j10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

