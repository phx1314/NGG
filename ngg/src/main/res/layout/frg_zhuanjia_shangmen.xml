<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical"
            android:padding="@dimen/j10dp">

            <EditText
                android:id="@+id/mEditText_title"
                style="@style/text_style_13_black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_l_w"
                android:drawableLeft="@drawable/ic_zuowu"
                android:drawablePadding="@dimen/j10dp"
                android:hint="请输入作物名称"
                android:padding="@dimen/j10dp" />

            <EditText
                android:id="@+id/mEditText_content"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j129dp"
                android:layout_marginTop="@dimen/j5dp"
                android:background="@drawable/bg_l_w"
                android:gravity="top"
                android:hint="详细描述你的问题，最少5个字"
                android:padding="@dimen/j10dp" />

            <com.framewidget.view.MGridPhotoChoose
                android:id="@+id/mMGridPhotoChoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j13dp" />

            <EditText
                android:id="@+id/mEditText_name"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j23dp"
                android:background="@drawable/bg_l_w"
                android:hint="请输入您的姓名"
                android:padding="@dimen/j10dp" />

            <EditText
                android:id="@+id/mEditText_phone"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginTop="@dimen/j5dp"
                android:background="@drawable/bg_l_w"
                android:maxLength="11"
                android:singleLine="true"
                android:hint="请输入联系方式"
                android:padding="@dimen/j10dp" />

            <EditText
                android:id="@+id/mEditText_address"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j5dp"
                android:background="@drawable/bg_l_w"
                android:hint="请输入详细地址"
                android:padding="@dimen/j10dp" />

            <TextView
                android:id="@+id/clk_mTextView_next"
                style="@style/text_style_15_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j10dp"
                android:layout_marginRight="@dimen/j10dp"
                android:layout_marginTop="@dimen/j20dp"
                android:background="@drawable/bt_blue_n"
                android:gravity="center"
                android:text="提交" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

