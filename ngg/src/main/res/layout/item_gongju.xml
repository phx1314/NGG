<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/clk_mLinearLayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/mTextView_title1"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/j4dp"
                android:text="@string/test"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mTextView_price1"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/j4dp"
                android:paddingRight="@dimen/j4dp"
                android:text="￥45.00"
                android:textColor="@color/Eb"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/j2dp"
            android:layout_height="match_parent"
            android:background="#f2f2f2" />

        <LinearLayout
            android:id="@+id/clk_mLinearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/mTextView_title2"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/j4dp"
                android:text="@string/test"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mTextView_price2"
                style="@style/text_style_13_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/j4dp"
                android:paddingRight="@dimen/j4dp"
                android:text="￥45.00"
                android:textColor="@color/Eb"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j3dp"
        android:background="#f2f2f2" />
</LinearLayout>

