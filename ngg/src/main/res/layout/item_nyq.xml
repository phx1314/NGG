<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/j7dp">


        <LinearLayout
            android:id="@+id/mLinearLayout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/j5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mdx.framework.widget.MImageView
                android:layout_width="@dimen/j35dp"
                android:layout_height="@dimen/j35dp"
                android:src="@drawable/morentouxiang_n" />

            <TextView
                android:id="@+id/mTextView_name"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j10dp"
                android:layout_weight="1"
                android:text="皮卡丘" />

            <TextView
                android:id="@+id/mTextView_guanzhu"
                android:layout_width="@dimen/j50dp"
                android:layout_height="@dimen/j20dp"
                android:background="@drawable/bt_guanzhu_n"
                android:gravity="center"
                android:text="+ 关注"
                android:textColor="@color/A"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_content_xia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j35dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTextView_content"
                style="@style/text_style_15_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘皮卡丘" />

            <com.framewidget.view.FixGridLayout
                android:id="@+id/mFixGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/j30dp"
                android:layout_marginTop="@dimen/j2dp"></com.framewidget.view.FixGridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mTextView_time"
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="1小时前  山鸡宝鸡市" />

                <TextView
                    android:id="@+id/mTextView_del"
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/j5dp"
                    android:paddingRight="@dimen/j5dp"
                    android:singleLine="true"
                    android:text="删除" />

                <TextView
                    android:id="@+id/mTextView_kan"
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_liulian"
                    android:drawablePadding="2dp"
                    android:text="722" />

                <TextView
                    android:id="@+id/mTextView_hf"
                    android:layout_width="@dimen/j50dp"
                    android:layout_height="@dimen/j20dp"
                    android:layout_marginLeft="@dimen/j10dp"
                    android:background="@drawable/bt_huifu_n"
                    android:gravity="center"
                    android:text="回复"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/j5dp"
                android:background="@color/tyD1" />

            <LinearLayout
                android:id="@+id/mLinearLayout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/j5dp"
                android:layout_marginTop="@dimen/j5dp"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/mTextView_more"
                style="@style/text_style_15_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j7dp"
                android:gravity="center"
                android:text="查看更多回复>>" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tyD1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j10dp"
        android:background="#f2f2f2" />
</LinearLayout>

