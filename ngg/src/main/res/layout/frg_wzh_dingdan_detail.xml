<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLinearLayout_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j65dp"
        android:background="#E5E5E5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j15dp"
        android:paddingRight="@dimen/j15dp">

        <ImageView
            android:id="@+id/mImageView_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yfw" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTextView_state"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已签收" />

            <TextView
                android:id="@+id/mTextView_state2"
                style="@style/text_style_13_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j5dp"
                android:text="已签收" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mTextView_code"
        style="@style/text_style_13_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j30dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:gravity="center_vertical"
        android:text="订单号：12312312315465465" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j10dp"
        android:background="@color/tyD1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/j10dp">

        <TextView
            android:id="@+id/mTextView_name"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豆角" />

        <TextView
            android:id="@+id/mTextView_content"
            style="@style/text_style_13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:text="豆豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角豆角角" />

        <com.framewidget.view.FixGridLayout
            android:id="@+id/mFixGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j8dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j10dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView_remark"
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j30dp"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/j15dp"
        android:text="合计￥6606" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j10dp"
        android:background="@color/tyD1" />

    <LinearLayout
        android:id="@+id/mLinearLayout_caozuo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j45dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/j15dp">

        <TextView
            android:id="@+id/mTextView_1"
            style="@style/text_style_13_black"
            android:layout_width="@dimen/j80dp"
            android:layout_height="@dimen/j25dp"
            android:background="@drawable/bt_order_l_g_n"
            android:gravity="center"
            android:text="取消订单" />

        <TextView
            android:id="@+id/mTextView_2"
            style="@style/text_style_13_black"
            android:layout_width="@dimen/j80dp"
            android:layout_height="@dimen/j25dp"
            android:layout_marginLeft="@dimen/j10dp"
            android:background="@drawable/bt_order_l_g_n"
            android:gravity="center"
            android:text="付款" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j10dp"
        android:background="@color/tyD1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j8dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/j10dp">

        <TextView
            android:id="@+id/mTextView_shouhuoren"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收货人：某某I" />

        <TextView
            android:id="@+id/mTextView_phone"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:text="联系方式：123132132456" />

        <TextView
            android:id="@+id/mTextView_address"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:text="收货地址：的撒旦撒旦撒" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j10dp"
        android:background="@color/tyD1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2" />
</LinearLayout>

