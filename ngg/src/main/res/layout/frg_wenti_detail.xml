<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.mdx.framework.widget.MPageListView
        android:id="@+id/mMPageListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tab"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/clk_mLinearLayout_jieda"
            android:layout_width="@dimen/j250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_o_n"
            android:gravity="center">

            <TextView
                android:id="@+id/mTextView_jieda"
                style="@style/text_style_15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bt_wljd_n"
                android:drawablePadding="@dimen/j5dp"
                android:gravity="center"
                android:text="我来解答" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

