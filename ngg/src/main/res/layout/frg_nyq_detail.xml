<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.mdx.framework.widget.MPageListView
        android:id="@+id/mMPageListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f2f2f2"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:padding="@dimen/j10dp" />

    <LinearLayout
        android:id="@+id/mLinearLayout_fs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j40dp"
        android:background="@drawable/bg_tab"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/j8dp"
        android:paddingRight="@dimen/j8dp">

        <EditText
            android:id="@+id/mEditText"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/j25dp"
            android:layout_weight="1"
            android:background="@drawable/bt_grey_l_n"
            android:gravity="center_vertical"
            android:hint="请输入"
            android:singleLine="true"
            android:paddingLeft="@dimen/j5dp"
            android:paddingRight="@dimen/j5dp" />

        <TextView
            android:id="@+id/mTextView_fs"
            style="@style/text_style_13_gray"
            android:layout_width="@dimen/j50dp"
            android:layout_height="@dimen/j25dp"
            android:layout_marginLeft="@dimen/j10dp"
            android:background="@drawable/bt_grey_l_n"
            android:gravity="center"
            android:text="回复" />
    </LinearLayout>

</LinearLayout>

