<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.mdx.framework.widget.MPageListView
        android:id="@+id/mMPageListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line"
        android:fadingEdge="none" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j45dp"
        android:background="@drawable/bg_tab"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j13dp">

        <CheckBox
            android:id="@+id/mCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_checked_checkbox"
            android:button="@null"
            android:checked="false" />

        <TextView
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j8dp"
            android:text="全选" />

        <LinearLayout
            android:id="@+id/mLinearLayout_shuju"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/j22dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/mTextView_zongji"
                style="@style/text_style_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计：￥6.0" />

            <TextView
                android:id="@+id/mTextView_num"
                style="@style/text_style_15_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j2dp"
                android:text="共1件商品" />
        </LinearLayout>

        <TextView
            android:id="@+id/clk_mTextView_jiesuan"
            style="@style/text_style_17_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/j50dp"
            android:layout_weight="1"
            android:background="@color/B"
            android:gravity="center"
            android:text="结算" />
    </LinearLayout>
</LinearLayout>

